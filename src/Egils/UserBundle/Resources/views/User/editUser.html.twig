{% extends '::base.html.twig' %}

{% block title "User | Edit user" %}

{% block body %}
    <h1 class="title">{% trans from 'EgilsUserBundle' %}user.edit.headline{% endtrans %}</h1>

    {%  if (form is defined) %}
        <form action="{{ path('put_user', {'id': id}) }}" method="POST" {{ form_enctype(form) }}>
            <input type="hidden" name="_method" value="put" />

            {{ form_widget(form) }}

            <input type="submit" value="{% trans from 'EgilsUserBundle' %}user.edit.submit{% endtrans %}">
        </form>
    {% endif %}
{% endblock body %}
