<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="egils_groups.manager.group.class">Egils\GroupsBundle\Doctrine\EntityManager\GroupManager</parameter>
        <parameter key="egils_groups.provider.group.default.class">Egils\GroupsBundle\Doctrine\Provider\GroupProvider</parameter>
    </parameters>

    <services>

        <!-- Group repository -->
        <service id="egils_groups.repository.group" factory-service="doctrine.orm.default_entity_manager"
                 factory-method="getRepository" class="Doctrine\ORM\EntityRepository" public="false">
            <argument>%egils_groups.model.group.class%</argument>
        </service>

        <!-- Default Group provider -->
        <service id="egils_groups.provider.group.default" class="%egils_groups.provider.group.default.class%">
            <argument type="service" id="egils_groups.repository.group"/>
        </service>

        <!-- Default Group manager -->
        <service id="egils_groups.manager.group.default" class="%egils_groups.manager.group.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%egils_groups.model.group.class%</argument>
        </service>

    </services>
</container>
